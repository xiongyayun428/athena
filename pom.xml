<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>oss-parent</artifactId>
		<groupId>com.xiongyayun</groupId>
		<version>0.0.3</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	<artifactId>athena</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>athena for spring boot</name>
	<description>雅典娜</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>12</java.version>
	</properties>

	<modules>
		<module>athena-project</module>
		<module>athena-samples</module>
		<module>athena-platform</module>
	</modules>

	<!-- 仓库配置 -->
	<repositories>
		<repository>
			<id>nexus</id>
			<name>Team Nexus Repository</name>
			<url>http://dev-www.hljinke.com:8081/repository/maven-public/</url>
<!--			<url>http://dev-www.hljinke.com:8081/repository/maven-aliyun/</url>-->
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<!-- 插件配置 -->
	<pluginRepositories>
		<pluginRepository>
			<id>nexus</id>
			<url>http://dev-www.hljinke.com:8081/repository/maven-public/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<!-- 发布配置 在执行mvn deploy后表示要发布的位置 -->
	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<name>Nexus Release Repository</name>
			<url>http://dev-www.hljinke.com:8081/repository/maven-releases/</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Nexus Snapshot Repository</name>
			<url>http://dev-www.hljinke.com:8081/repository/maven-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
</project>
